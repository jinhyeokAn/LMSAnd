<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".notice.NoticeDetailActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:id="@+id/container2"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="자유게시판"
            android:textSize="30dp"
            android:id="@+id/notice_detail_txt"
            />

        <TableLayout
            android:layout_below="@+id/notice_detail_txt"
            android:id="@+id/board_table"
            android:stretchColumns="0,2,3"
            android:layout_width="match_parent"
            android:layout_height="600dp">
            <TableRow
                android:layout_height="0dp"
                android:layout_width="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="@color/lmsmainbl"
                    android:text="제목"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="제목"
                    android:padding="10dp"
                    android:id="@+id/board_detail_title"
                    />

            </TableRow>
            <TableRow
                android:layout_height="0dp"
                android:layout_width="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="@color/lmsmainbl"
                    android:text="작성자"/>

                <TextView
                    android:id="@+id/board_detail_writer"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="작성자"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="@color/lmsmainbl"
                    android:text="조회수"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="조회수"
                    android:id="@+id/board_detail_readcnt"
                    android:padding="10dp"
                    />
            </TableRow>
            <TableRow
                android:layout_height="0dp"
                android:layout_width="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="@color/lmsmainbl"
                    android:text="작성일자"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/board_detail_writedate"
                    android:text="작성일자"
                    android:padding="10dp"

                    />
            </TableRow>



            <TableRow
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="@color/lmsmainbl"
                    android:text="내용"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:gravity="left"
                    android:id="@+id/board_detail_content"
                    android:text="내용"/>


            </TableRow>

            <TableRow
                android:layout_height="0dp"
                android:layout_width="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="@color/lmsmainbl"
                    android:text="첨부파일"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/board_detail_filename"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_attachment_fill0_wght400_grad0_opsz48"
                    android:id="@+id/board_detail_filepath"
                    android:layout_gravity="center"

                    />


            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/board_table"
            android:gravity="center"
            >

            <Button
                android:layout_margin="10dp"
                android:id="@+id/board_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목록"/>
            <Button
                android:layout_margin="10dp"
                android:id="@+id/board_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수정"/>
            <Button
                android:layout_margin="10dp"
                android:id="@+id/board_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="삭제"/>






        </LinearLayout>




    </RelativeLayout>

</FrameLayout>