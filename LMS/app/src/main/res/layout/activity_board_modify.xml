<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".notice.NoticeDetailActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:id="@+id/container2"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="자유게시판 수정"
            android:textSize="30dp"
            android:id="@+id/notice_detail_txt"
            />

        <TableLayout
            android:layout_below="@+id/notice_detail_txt"
            android:id="@+id/board_table"
            android:stretchColumns="0,1"
            android:layout_width="match_parent"
            android:layout_height="600dp">
            <TableRow
                android:layout_height="0dp"
                android:layout_width="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="@color/lmsmainbl"
                    android:text="제목"/>
                <EditText
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="제목"
                    android:padding="10dp"
                    android:id="@+id/board_modify_title"
                    />

            </TableRow>
            <TableRow
                android:layout_height="0dp"
                android:layout_width="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="@color/lmsmainbl"
                    android:text="작성자"/>

                <EditText
                    android:id="@+id/board_modify_writer"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="작성자"

                    />
            </TableRow>
            <TableRow
                android:layout_height="0dp"
                android:layout_width="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="@color/lmsmainbl"
                    android:text="작성일자"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/board_modify_writedate"
                    android:text="작성일자"
                    android:padding="10dp"

                    />
            </TableRow>



            <TableRow
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="@color/lmsmainbl"
                    android:text="내용"/>
                <EditText
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:gravity="left"
                    android:id="@+id/board_modify_content"
                    android:text="내용"/>


            </TableRow>


        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/board_table"
            android:gravity="center"
            >

            <Button
                android:layout_margin="10dp"
                android:id="@+id/board_modify_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장"/>
            <Button
                android:layout_margin="10dp"
                android:id="@+id/board_modify_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"/>





        </LinearLayout>




    </RelativeLayout>

</FrameLayout>